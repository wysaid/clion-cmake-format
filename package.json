{
  "name": "clion-cmake-formatter",
  "displayName": "CLion CMake Formatter",
  "description": "Format CMakeLists.txt files with CLion's indentation and spacing style",
  "version": "0.1.0",
  "publisher": "wysaid",
  "license": "MIT",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Formatters",
    "Programming Languages"
  ],
  "keywords": [
    "cmake",
    "clion",
    "format",
    "jetbrains",
    "formatter"
  ],
  "activationEvents": [
    "onLanguage:cmake"
  ],
  "main": "./dist/src/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "cmake",
        "extensions": [
          ".cmake"
        ],
        "filenames": [
          "CMakeLists.txt"
        ]
      }
    ],
    "configuration": {
      "title": "CLion CMake Formatter",
      "properties": {
        "clionCMakeFormatter.useTabs": {
          "type": "boolean",
          "default": false,
          "description": "Use tabs for indentation instead of spaces",
          "order": 1
        },
        "clionCMakeFormatter.tabSize": {
          "type": "number",
          "default": 4,
          "description": "Number of spaces equivalent to one tab",
          "order": 2
        },
        "clionCMakeFormatter.indentSize": {
          "type": "number",
          "default": 4,
          "description": "Number of spaces for indentation",
          "order": 3
        },
        "clionCMakeFormatter.continuationIndentSize": {
          "type": "number",
          "default": 4,
          "description": "Number of spaces for continuation indent",
          "order": 4
        },
        "clionCMakeFormatter.keepIndentOnEmptyLines": {
          "type": "boolean",
          "default": false,
          "description": "Keep indent on empty lines",
          "order": 5
        },
        "clionCMakeFormatter.spaceBeforeCommandDefinitionParentheses": {
          "type": "boolean",
          "default": false,
          "description": "Space before command definition parentheses (function, macro)",
          "order": 10
        },
        "clionCMakeFormatter.spaceBeforeCommandCallParentheses": {
          "type": "boolean",
          "default": false,
          "description": "Space before command call parentheses",
          "order": 11
        },
        "clionCMakeFormatter.spaceBeforeIfParentheses": {
          "type": "boolean",
          "default": true,
          "description": "Space before 'if' parentheses",
          "order": 12
        },
        "clionCMakeFormatter.spaceBeforeForeachParentheses": {
          "type": "boolean",
          "default": true,
          "description": "Space before 'foreach' parentheses",
          "order": 13
        },
        "clionCMakeFormatter.spaceBeforeWhileParentheses": {
          "type": "boolean",
          "default": true,
          "description": "Space before 'while' parentheses",
          "order": 14
        },
        "clionCMakeFormatter.spaceInsideCommandDefinitionParentheses": {
          "type": "boolean",
          "default": false,
          "description": "Space inside command definition parentheses",
          "order": 20
        },
        "clionCMakeFormatter.spaceInsideCommandCallParentheses": {
          "type": "boolean",
          "default": false,
          "description": "Space inside command call parentheses",
          "order": 21
        },
        "clionCMakeFormatter.spaceInsideIfParentheses": {
          "type": "boolean",
          "default": false,
          "description": "Space inside 'if' parentheses",
          "order": 22
        },
        "clionCMakeFormatter.spaceInsideForeachParentheses": {
          "type": "boolean",
          "default": false,
          "description": "Space inside 'foreach' parentheses",
          "order": 23
        },
        "clionCMakeFormatter.spaceInsideWhileParentheses": {
          "type": "boolean",
          "default": false,
          "description": "Space inside 'while' parentheses",
          "order": 24
        },
        "clionCMakeFormatter.maxBlankLines": {
          "type": "number",
          "default": 2,
          "description": "Maximum consecutive blank lines",
          "order": 30
        },
        "clionCMakeFormatter.commandCase": {
          "type": "string",
          "default": "unchanged",
          "enum": ["unchanged", "lowercase", "uppercase"],
          "enumDescriptions": [
            "Keep command case unchanged",
            "Convert commands to lowercase",
            "Convert commands to uppercase"
          ],
          "description": "Force command case",
          "order": 31
        },
        "clionCMakeFormatter.lineLength": {
          "type": "number",
          "default": 120,
          "description": "Maximum line length for formatted CMake files",
          "order": 40
        },
        "clionCMakeFormatter.alignMultiLineArguments": {
          "type": "boolean",
          "default": false,
          "description": "Align arguments when multi-line",
          "order": 41
        },
        "clionCMakeFormatter.alignMultiLineParentheses": {
          "type": "boolean",
          "default": false,
          "description": "Align parentheses when multi-line",
          "order": 42
        },
        "clionCMakeFormatter.alignControlFlowParentheses": {
          "type": "boolean",
          "default": false,
          "description": "Align control flow parentheses when multi-line",
          "order": 43
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./dist/test/runTest.js",
    "test:unit": "mocha --require ts-node/register 'test/**/*.test.ts'",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.56.0",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wysaid/clion-cmake-formatter"
  },
  "bugs": {
    "url": "https://github.com/wysaid/clion-cmake-formatter/issues"
  },
  "homepage": "https://github.com/wysaid/clion-cmake-formatter#readme"
}
